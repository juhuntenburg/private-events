<h1><%= @user.name %></h1>

<p><strong>Email:</strong> <%= @user.email %></p>

<p><strong>Hosted Events:</strong></p>

<% if @user.hosted_events.any? %>
  <ul>
    <% @user.hosted_events.each do |event| %>
      <li>
        <%= link_to(event.name, event_path(event)) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>User is not hosting any events.</p>
<% end %>


<p><strong>Past attended events:</strong></p>
<% past_events = @user.attended_events.where(date: ..Time.now) %>

<% if past_events.any? %>
  <ul>
    <% past_events.each do |event| %>
      <li>
        <%= link_to(event.name, event_path(event)) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No past events.</p>
<% end %>


<p><strong>Future attended events:</strong></p>
<% future_events = @user.attended_events.where(date: Time.now..) %>

<% if future_events.any? %>
  <ul>
    <% future_events.each do |event| %>
      <li>
        <%= link_to(event.name, event_path(event)) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No future events.</p>
<% end %>
